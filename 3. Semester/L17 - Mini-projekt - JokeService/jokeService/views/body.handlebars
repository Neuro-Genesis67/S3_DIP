<div id="wrapper">
    <!---------------------JokesWindow------------------------->
    <div class="box jokesWindow">
        <div class="padding jokes">
            <table class="jokesTable">
                {{> jokes}}
            </table>
        </div>
    </div>

    <!---------------------SitesWindow------------------------->
    <div class="box sitesWindow">
        <div class="padding sites">
            <table class="sitesTable">
           {{> sites}}
            </table>
        </div>
    </div>

    <!---------------------OptionsWindow----------------------->
    <div class="box optionsWindow">
        <div class="padding options">

            <label class="option" id="sTxt">Setup</label>
            <textarea class="option" id="sInput" name="setupText" cols="40" rows="2"></textarea>

            <label class="option" id="pTxt">Punchline</label>
            <textarea class="option" id="pInput" name="punchlineText" cols="40" rows="2"></textarea>

            <button class="option optionBtn" >Create</button>
            <button class="option optionBtn" >Delete</button>
        </div>
    </div>
    <!--------------------------------------------------------->
</div>